datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PAID
  FULFILLED
  CANCELED
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  role      UserRole  @default(ADMIN)

  createdAt DateTime  @default(now())
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[] @relation("ProductToCategory")
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Decimal     @db.Decimal(10,2)
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  categoryId  Int?
  category    Category?   @relation("ProductToCategory", fields: [categoryId], references: [id])
  orderItems  OrderItem[]
}

model OrderItem {
  id          Int          @id @default(autoincrement())
  orderId     Int
  productId   Int
  order       Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product      @relation(fields: [productId], references: [id])
  price       Decimal      @db.Decimal(10,2)
  quantity    Int
  cakeOptions CakeOption[] @relation("OrderItemToCakeOption")
}

model CakeOption {
  id          Int        @id @default(autoincrement())
  name        String
  value       String
  orderItemId Int
  orderItem   OrderItem  @relation("OrderItemToCakeOption", fields: [orderItemId], references: [id], onDelete: Cascade)
}

// Order и Invoice с явной связью
model Order {
  id            Int         @id @default(autoincrement())
  customerName  String
  customerEmail String
  customerPhone String?
  comment       String?
  status        OrderStatus @default(PENDING)
  total         Decimal     @db.Decimal(10,2)
  createdAt     DateTime    @default(now())
  items         OrderItem[]
  invoices      Invoice[]   @relation("OrderToInvoice")
}

model Invoice {
  id        Int      @id @default(autoincrement())
  orderId   Int
  order     Order    @relation("OrderToInvoice", fields: [orderId], references: [id], onDelete: Cascade)
  issuedAt  DateTime @default(now())
  paid      Boolean  @default(false)
  total     Decimal  @db.Decimal(10,2)
  pdfUrl    String?
  note      String?
}
